<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" 
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <title>Stylish Registration Page</title>
    <style>
        body {
            background: linear-gradient(to right, #667eea, #764ba2);
            height: 80vh;
            margin: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            display: block;
        }
        .registration-form {
            margin-left: 30%;
            width: 70vh;
            padding: 40px;
            background: #fff;
            border-radius: 15px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
        }
        .registration-form h3 {
            color: #764ba2;
            text-align: center;
        }
        .form-group {
            margin-bottom: 20px;
        }
        .form-group label {
            font-weight: bold;
            color: #555;
        }
        .form-control {
            border: 2px solid #ddd;
            border-radius: 8px;
            transition: border-color 0.3s;
        }
        .form-control:focus {
            border-color: #764ba2;
        }
        .btn-primary {
            background: linear-gradient(to right, #667eea, #764ba2);
            border: none;
            border-radius: 8px;
            transition: background 0.3s;
        }
        .btn-primary:hover {
            background: linear-gradient(to right, #764ba2, #667eea);
        }
        .password-info {
            font-size: 12px;
            margin-top: 5px;
        }
        .valid {
            color: green;
        }
        .invalid {
            color: red;
        }
        header {
            background-color: #fff;
            padding: 30px;
            text-align: center;
            border-radius: 10px;
            margin-bottom: 20px;
            
          }
          .header-title{
            text-align: center;
            font-family: sans-serif;
            font-size: 4rem;
            font-weight: bold;
          }
          
    </style>
</head>
<body>
    <header>
        <h1 class="header-title ">Move It Logistics</h1>
      </header>
<div class="container-fluid">
    <div class="registration-form">
        <div class="container-fluid d-flex align-items-center justify-content-center">
            <a class="btn btn-light btn-lg" href="/" role="button">Register</a>
            <a class="btn btn-dark btn-lg" href="/login" role="button">Login</a>
        </div>
        <hr>
        <h3>Get Started</h3>
        
        <form onsubmit="return validatePassword()" action="/registration" method="post">
            <div class="form-group">
                <label for="username">Username:</label>
                <input type="text" class="form-control" id="username" name="username" placeholder="Enter your username" required>
            </div>
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" required>
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" class="form-control" id="password" name="password" pattern=".{8,}" placeholder="Enter a valid password"
                 title="Password must be at least 8 characters long" required>
                <div class="password-info" id="lowercase-info">At least 1 lowercase character</div>
                <div class="password-info" id="uppercase-info">At least 1 uppercase character</div>
                <div class="password-info" id="numeric-info">At least 1 numeric character</div>
                <div class="password-info" id="special-char-info">At least 1 special character</div>
            </div>

            

            <button type="submit" class="btn btn-primary btn-block">Register</button>
        </form>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<script>
    function validatePassword() {
        var password = document.getElementById("password").value;
        var lowercaseRegex = /[a-z]/;
        var uppercaseRegex = /[A-Z]/;
        var numericRegex = /[0-9]/;
        var specialCharacterRegex = /[!@#$%^&*()_+{}\[\]:;<>,.?~\\/-]/;

        var lowercaseInfo = document.getElementById("lowercase-info");
        var uppercaseInfo = document.getElementById("uppercase-info");
        var numericInfo = document.getElementById("numeric-info");
        var specialCharInfo = document.getElementById("special-char-info");

        var isLowercase = lowercaseRegex.test(password);
        var isUppercase = uppercaseRegex.test(password);
        var isNumeric = numericRegex.test(password);
        var isSpecialCharacter = specialCharacterRegex.test(password);

        displayInfo(isLowercase, lowercaseInfo, 'lowercase');
        displayInfo(isUppercase, uppercaseInfo, 'uppercase');
        displayInfo(isNumeric, numericInfo, 'numeric');
        displayInfo(isSpecialCharacter, specialCharInfo, 'special character');

        // You can add additional validation logic here if needed

        return isLowercase && isUppercase && isNumeric && isSpecialCharacter;
    }

    function displayInfo(isValid, element, characterSet) {
        if (isValid) {
            element.innerHTML = "Valid";
            element.className = "password-info valid";
        } else {
            element.innerHTML = "Missing " + characterSet;
            element.className = "password-info invalid";
        }
    }

    // Add event listeners to validate the password as the user types
    document.getElementById("password").addEventListener("input", function () {
        validatePassword();
    });

    document.getElementById("password").addEventListener("input", function () {
        validatePassword();
    });

    document.getElementById("password").addEventListener("input", function () {
        validatePassword();
    });

    document.getElementById("password").addEventListener("input", function () {
        validatePassword();
    });
</script>

</body>
</html>
